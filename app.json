{
  "expo": {
    "name": "Vibe Player",
    "slug": "vibe-player",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "joeproj",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.joemark.joeproj",
      "jsEngine": "hermes",
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_AUDIO",
        "READ_MEDIA_IMAGES",
        "READ_MEDIA_VIDEO",
        "ACCESS_MEDIA_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_MEDIA_PLAYBACK",
        "WAKE_LOCK",
        "POST_NOTIFICATIONS",
        "RECORD_AUDIO"
      ],
      "adaptiveIcon": {
        "backgroundColor": "#120924",
        "foregroundImage": "./assets/images/icon.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "newArchEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/transparent.png",
          "resizeMode": "contain",
          "backgroundColor": "#000000"
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow Vibe Player to access your microphone for voice search."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#120924"
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Vibe Player to access your library.",
          "savePhotosPermission": "Allow Vibe Player to save to your library.",
          "isAccessMediaLocationEnabled": true,
          "audioPermission": "Allow Vibe Player to access your audio files.",
          "granularPermissions": [
            "audio",
            "video",
            "photo"
          ]
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "ndkVersion": "26.1.10909125",
            "kotlinVersion": "1.9.24",
            "gradleVersion": "8.7",
            "usesCleartextTraffic": false,
            "enableProguardInReleaseBuilds": true,
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "minSdkVersion": 24,
            "extraGradleProps": {}
          }
        }
      ],
      "./withAndroidFFmpeg.js",
      "expo-font",
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Allow Vibe Player to access your microphone for voice search."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": false
    }
  }
}
